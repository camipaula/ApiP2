@model List<Marca>
@{
    ViewData["Title"] = "Lista Marcas";
}
<h1>@ViewData["Title"]</h1>
<button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create","Marca")'">Nueva Marca</button>
<br> <br/>


<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Accion</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.idMarca</td>
                <td>@item.nombre</td>
                <td>@item.descripcion</td>
                <td>
                    <a asp-action="Edit" asp-route-IdMarca="@item.idMarca" type="button" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>&nbsp;
                    <a asp-action="Details" asp-route-IdMarca="@item.idMarca" type="button" class="btn btn-success"><i class="bi bi-eye"></i></a>&nbsp;
                    <a asp-action="Delete" asp-route-IdMarca="@item.idMarca" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
