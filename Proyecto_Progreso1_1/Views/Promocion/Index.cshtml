@model List<Promocion>
@{
    ViewData["Title"] = "Lista Promociones";
}
<h1>@ViewData["Title"]</h1>
<button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create","Promocion")'">Nueva Promocion</button>
<br>
<br />


<p>Buscar por ID:</p>

<form method="get" action="@Url.Action("Search", "Promocion")">
    <div class="mb-3">
        <label class="form-label">ID:</label>
        <input type="text" name="IdPromocion" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>

</form>


<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Marca</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Precio</th>
            <th scope="col">Accion</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.IdPromocion</td>
                <td>@item.Nombre</td>
                <td>@item.Descripcion</td>
                <td>@item.Marca</td>
                <td>@item.Cantidad</td>
                <td>@item.Precio</td>
                <td>
                    <a asp-action="Edit" asp-route-IdPromocion="@item.IdPromocion" type="button" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>&nbsp;
                    <a asp-action="Details" asp-route-IdPromocion="@item.IdPromocion" type="button" class="btn btn-success"><i class="bi bi-eye"></i></a>&nbsp;
                    <a asp-action="Delete" asp-route-IdPromocion="@item.IdPromocion" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
