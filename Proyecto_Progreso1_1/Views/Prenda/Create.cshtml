@model PrendaUsuario
@{
    ViewData["Title"] = "Creación de Productos";
}

<h1>@ViewData["Title"]</h1>
<p>En esta página se crean los productos.</p>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="nombre" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <input asp-for="descripcion" class="form-control">

    </div>
    <div class="mb-3">
        <label asp-for="MarcaIdMarca" class="form-label">Marca </label>
        @Html.DropDownListFor(model => model.MarcaIdMarca, (IEnumerable<SelectListItem>)ViewBag.marca, "Selecciona una marca", new { @class = "form-control" })

    </div>
    <div class="mb-3">
        <label asp-for="CategoriaIdCategoria" class="form-label">Categoria de Producto</label>
        @Html.DropDownListFor(model => model.CategoriaIdCategoria, (IEnumerable<SelectListItem>)ViewBag.categoria, "Selecciona una categoria", new { @class = "form-control" })

    </div>
    <div class="mb-3">
        <label class="form-label">Cantidad</label>
        <input asp-for="cantidad" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Precio</label>
        <input asp-for="precio" class="form-control">
    </div>
    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        <div class="col-6">
            <a asp-action="Cancelar" class="btn btn-secondary">Cancelar</a>
        </div>
    </div>
</form>