@model List<Prenda>
@{
    ViewData["Title"] = "Lista Prendas";
}
<h1>@ViewData["Title"]</h1>
<button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create","Prenda")'">Nueva Prenda</button>
<br> <br/>


<p>Buscar por ID:</p>

<form method="get" action="@Url.Action("Search", "Prenda")">
    <div class="mb-3">
        <label class="form-label">ID:</label>
        <input type="text" name="IdPrenda" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>

</form>



<table class="table">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Marca</th>
            <th scope="col">Categoria</th>
            <th scope="col">Cantidad</th>
            <th scope="col">Precio</th>
            <th scope="col">Accion</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.idPrenda</td>
                <td>@item.nombre</td>
                <td>@item.descripcion</td>
                <td>@item.marca.nombre</td>
                <td>@item.categoria.nombre</td>
                <td>@item.cantidad</td>
                <td>@item.precio</td>
                <td>
                    <a asp-action="Edit" asp-route-IdPrenda="@item.idPrenda" type="button" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>&nbsp;
                    <a asp-action="Details" asp-route-IdPrenda="@item.idPrenda" type="button" class="btn btn-success"><i class="bi bi-eye"></i></a>&nbsp;
                    <a asp-action="Delete" asp-route-IdPrenda="@item.idPrenda" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
