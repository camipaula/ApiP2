@model Prenda

@{
    ViewData["Title"] = "Detalles Prenda";
}

<h1>@ViewData["Title"]</h1>

<form>
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input asp-for="Nombre" class="form-control " readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <input asp-for="Descripcion" class="form-control" readonly>
    </div>
    <div class="mb-3">
        <label class="form-label">Marca</label>
        <input asp-for="Marca" class="form-control" readonly>
    </div>
    <div class="mb-3">
        <label class="form-label">Categoria</label>
        <input asp-for="Categoria" class="form-control" readonly>
    </div>
    <div class="mb-3">
        <label class="form-label">Cantidad</label>
        <input asp-for="Cantidad" class="form-control" readonly>
    </div>
    <div class="mb-3">
        <label class="form-label">Precio</label>
        <input asp-for="Precio" class="form-control" readonly>
    </div>
    <div class="row">
        <div class="col-6">
            <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Index","Prenda")'">Volver</button>
        </div>
    </div>
</form>