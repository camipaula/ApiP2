<!-- Se debe incluir la biblioteca para importr los iconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

@model List<Categoria>
@{
    ViewData["Title"] = "Categorías";
}
<h1>@ViewData["Title"]</h1>
<button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Create","Categoria")'">Nueva Categoria</button>

<br>
<br />


<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Descripcion</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.idCategoria</td>
                <td>@item.nombre</td>
                <td>@item.descripcion</td>
                <td>
                    <a asp-action="Edit" asp-route-IdCategoria="@item.idCategoria" type="button" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>&nbsp;
                    <a asp-action="Details" asp-route-IdCategoria="@item.idCategoria" type="button" class="btn btn-success"><i class="bi bi-eye"></i></a>&nbsp;
                    <a asp-action="Delete" asp-route-IdCategoria="@item.idCategoria" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
                </td>
                </tr>
        }
    </tbody>
